<!--?xml version="1.0"?-->
<server>
  <world>
      <shortname>setme</shortname>
      <longname>I Forgot To Edit My Config</longname>

      <!-- Only specify these two if you really think you need to.  (read: You don't) -->
      <!-- <address>some.server.com</address> -->
      <!-- <localaddress>192.168.0.5</localaddress> -->

      <!-- Loginserver information.  Defaults shown -->
              <loginserver>
                      <!-- Add legacy if you are using the public login. Not needed for private login server. -->
                      <host>127.0.0.1</host>
                      <port>5998</port>
                      <!-- If you register your server, us those credentials here -->
                      <account></account>
                      <password></password>
              </loginserver>

      <!-- Server status.  Default is unlocked -->
      <!--<locked/>-->
       <unlocked/> 

      <!-- Sets the ip/port for the tcp and telnet connections.  Both zones and console (if enabled).  Defaults are shown -->
      <tcp ip="127.0.0.1" port="9001"></tcp>
      <telnet enable="true" ip="0.0.0.0" port="9000"></telnet>
               
      <!-- Sets the shared key used by zone/launcher to connect to world -->
      <key>some long random string(change this)</key>

      <!-- Chatserver (channels) information.  Defaults shown -->
      <chatserver>
          <host>127.0.0.1</host>
          <port>7779</port>
      </chatserver>

      <!-- Mailserver (in-game mail) information.  Defaults shown -->
      <mailserver>
          <host>127.0.0.1</host>
          <port>7779</port>
      </mailserver>

      <zones>
          <defaultstatus>0</defaultstatus>

          <!-- Sets port range for world to use to auto configure zones -->
          <ports high="7100" low="7000"></ports>
      </zones>

      <!-- Database configuration, replaces db.ini.  Defaults shown -->
      <database>
          <host>db</host>
          <port>3306</port>
          <username>root</username>
          <password>password</password>
          <db>eqemu</db>
      </database>

      <qsdatabase>
          <host>db</host>
          <port>3306</port>
          <username>root</username>
          <password>password</password>
          <db>eqemu</db>
